#version 120

varying vec3 normal;
varying vec3 vpos;

void main()
{
    // vertex normal
    normal = gl_NormalMatrix * gl_Normal;
    // vertex position
    vpos = vec3(gl_ModelViewMatrix * gl_Vertex);

    // output vertex
    gl_Position = ftransform();
}
